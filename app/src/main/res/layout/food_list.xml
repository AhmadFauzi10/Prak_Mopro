<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <ImageView
        android:id="@+id/iconMakanan"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:src="@drawable/ic_makanan" />

    <TextView
        android:id="@+id/textMakanan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/iconMakanan"
        android:layout_marginTop="20dp"
        android:background="#D3D3D3"
        android:gravity="center_vertical"
        android:paddingStart="150dp"
        android:text="Makanan "
        android:textColor="#000"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/iconMinuman"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:src="@drawable/ic_minuman" />

    <TextView
        android:id="@+id/textMinuman"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/iconMakanan"
        android:layout_marginTop="20dp"
        android:background="#D3D3D3"
        android:gravity="center_vertical"
        android:paddingStart="150dp"
        android:text="Minuman"
        android:textColor="#000"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/iconDesert"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:src="@drawable/ic_desert" />

    <TextView
        android:id="@+id/textDesert"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/iconMakanan"
        android:layout_marginTop="20dp"
        android:background="#D3D3D3"
        android:gravity="center_vertical"
        android:paddingStart="150dp"
        android:text="Desert"
        android:textColor="#000"
        android:textSize="26sp" />
</LinearLayout>